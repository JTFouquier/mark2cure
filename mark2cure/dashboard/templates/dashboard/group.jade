extends base

- load widget_tweaks
- load brabeion_tags
- load humanize

block content

  .container
    .row
      - if group.description
        .col-md-10.col-md-offset-1.head-space
          p.lead #{group.description}

      .col-md-8.col-md-offset-2

        table.table.table-hover.table-striped
          thead
            tr
              th Document
              th X
              th Y

          tbody
        - for doc_q_rel in group.total_documents
              tr
                th(scope="row") #{doc.0}
                td
                  - if doc.valid_pubtator
                    i.fa.fa-check
                  - else
                    i.fa.fa-exclamation-triangle

                td
                  p #{doc_q_rel.document.title}

