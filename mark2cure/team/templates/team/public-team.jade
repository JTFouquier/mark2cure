extends base

- load widget_tweaks
- load humanize

block header
    - if user.is_authenticated
      include includes/header-anon
    - else
      include includes/header-anon


block content
  .container
    .row.head-space
      .col-xs-12
        h1.text-center
          #{team.name}

    hr

    .row
      .col-xs-offset-1.col-xs-7
        .row
          .col-xs-12
            .panel.panel-info
              .panel-heading
                | Motivation
              .panel-body

          .col-xs-12
            .panel.panel-info
              .panel-heading
                | Quote


      .col-xs-3
        .row
          .col-xs-12
            .panel.panel-info
              .panel-heading
                | Statistics
              .panel-body
                ol.list-unstyled
                  li
                    p Created: #{team.created|naturaltime}
                  li
                    p Member Count: #{team.members_count}



