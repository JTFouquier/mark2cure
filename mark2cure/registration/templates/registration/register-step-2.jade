extends common/layouts/register_layout.jade

block title
  title eCleanit

block content
  .container-fluid
    .row
      .col-sm-4.col-md-4.register-sidebar
        .logo-section
          img(src='#{STATIC_URL}img/ecleanit_logo_141_43.png')
        .progress-section
          h1.text-center Welcome!
          h2.text-center We just need a little more info to get you started.
          ul.ec-progress-list
            li
              div.ec-check
                span.glyphicon.glyphicon-ok
              h4 Step 1
              p Tell us about yourself.
            li.active
              div.ec-check
                span.glyphicon.glyphicon-ok
              h4 Step 2
              p Tell us about your property.
            li.pending
              div.ec-check
                span.glyphicon.glyphicon-ok
              h4 Step 3
              p Tell us about your cleaners.
            li.pending
              div.ec-check
                span.glyphicon.glyphicon-ok
              h4 Step 4
              p Tell us about your cleaning job.

      .col-sm-8.col-sm-offset-4.col-md-8.col-md-offset-4.register-main
        form(action='{% url "registration:setup-property" %}', method='post').register-form
          - csrf_token
          input(type='hidden', name='owner', value='{{user.pk}}')
          input(type='hidden', name='country', value='US')
          input(type='hidden', name='cleaning_schedule_preference', value='0')

          .panel.panel-default.register-panel
            .panel-body
              .container-fluid
                .row
                  .col-sm-10.col-sm-offset-1
                      .form-group
                        label(for='register_address_street_one') Street address line 1*
                        input#register_address_one.form-control(type='text', name='street_address_1')
                      .form-group
                        label(for='register_address_street_two') Street address line 2
                        input#register_address_street_two.form-control(type='text', name='street_address_2')
                      .form-group
                        label(for='register_address_city') City*
                        input#register_address_city.form-control(type='text', name='city')
                      .row
                        .col-sm-7
                          .form-group
                            label(for='register_address_state') State*
