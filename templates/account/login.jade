extends base

- load widget_tweaks

block header

block content

    .row.head-space-xl
      .col-xs-12
        h1.text-center Sign In

    .row.head-space
      .col-xs-4.col-xs-offset-4
        - if form.errors
          p Your username and password didn't match. Please try again.
          #{form.errors}

      .col-xs-6.col-xs-offset-3
        form(method='post')
          {% csrf_token %}
          .form-group
            .row
              .col-xs-6.col-xs-offset-3
                #{form.username|add_class:'form-control'|attr:'placeholder:Username'}

          .form-group
            .row
              .col-xs-6.col-xs-offset-3
                #{form.password|add_class:'form-control'|attr:'placeholder:Password'}


          .form-group.head-space
            .row
              .col-xs-4.col-xs-offset-4
                input(type='submit', value='Sign In').btn.btn-default.btn-block
              .col-xs-4.col-xs-offset-4
                p.text-right
                  a(href='/account/password-reset/') Forgot password?

