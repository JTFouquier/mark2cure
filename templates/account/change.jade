extends base

- load widget_tweaks

block content
    .row
        .col-md-6.col-md-offset-3
            h1 Change Password

            - if form.errors
                p Your passwords didn't match. Please try again.

            form(method="post", action="")
                {% csrf_token %}
                label #{form.old_password.label_tag}
                p #{form.old_password|add_class:"form-control"}
                label #{form.new_password1.label_tag}
                p #{form.new_password1|add_class:"form-control"}
                label #{form.new_password2.label_tag}
                p #{form.new_password2|add_class:"form-control"}
                input(type="submit", value="save new password").btn.btn-primary.full-width.radius
                input(type="hidden", name="next", value="{{next}}").button.small.radius
