.row

  .col-md-12
    div(id="carousel-concept-questions", data-ride="carousel").carousel.slide

      ol.carousel-indicators
        - for c_one, c_two, index in concepts
          li(data-target="#carousel-concept-questions", data-slide-to="{{ index }}", class="{{ 'active' if index == 0 else '' }}" )

      div.carousel-inner
        - for c_one, c_two, index in concepts
          - if index == 0
            div.item.active
              img(src="http://www.puff.me.uk/ss/sCT2HsNzGt1Bo.png").img-responsive
              div.carousel-caption
                .row
                  .col-md-4.col-md-offset-1
                    h2.text-center
                      | {{ c_one.concept_id }}

                  .col-md-2
                    h2.text-center
                      | Vs.

                  .col-md-4
                    h2.text-center
                      | {{ c_two.concept_id }}

                .row
                  .col-md-6.col-md-offset-3
                    p.lead
                      | Describe their relation

                .row
                  .col-md-6.col-md-offset-3
                    select.select-relation
                      option(value = "direct")
                        | Direct
                      option(value = "physical")
                        | Physical
                      option(value = "indirect")
                        | Indirect
                      option(value = "correlation")
                        | Correlation
                      option(value = "no relation")
                        | No Relation




          - else
            div.item
              img(src="http://www.puff.me.uk/ss/sCT2HsNzGt1Bo.png").img-responsive
              div.carousel-caption
                h3
                  | {{ c_one.preferred_name }}
                p
                  | Hello


      a(href="#carousel-concept-questions", data-slide="prev").left.carousel-control
        span.glyphicon.glyphicon-chevron-left
      a(href="#carousel-concept-questions", data-slide="next").right.carousel-control
        span.glyphicon.glyphicon-chevron-right


